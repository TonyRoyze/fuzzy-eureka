---
export interface Props {
    title: string;
    description?: string;
    keywords?: string;
    image?: string;
    type?: string;
}

const {
    title,
    description = "Leading education agency providing comprehensive consulting services for students seeking higher education opportunities worldwide.",
    keywords = "education consulting, university admissions, student services, academic guidance, study abroad",
    image = "/images/og-image.jpg",
    type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO Meta Tags -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:type" content={type} />
        <meta property="og:site_name" content="Rivil International" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={image} />

        <!-- Preload Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />

        <!-- Structured Data -->
        <script type="application/ld+json" is:inline>
            {
                "@context": "https://schema.org",
                "@type": "EducationalOrganization",
                "name": "Rivil International",
                "description": "Leading education agency providing comprehensive consulting services for students seeking higher education opportunities worldwide.",
                "url": "https://education-agency.com",
                "logo": "https://education-agency.com/images/logo.png",
                "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "123 Education Street",
                    "addressLocality": "New York",
                    "addressRegion": "NY",
                    "postalCode": "10001",
                    "addressCountry": "US"
                },
                "contactPoint": {
                    "@type": "ContactPoint",
                    "telephone": "+1-555-0123",
                    "contactType": "customer service",
                    "email": "info@educonsultpro.com"
                },
                "sameAs": [
                    "https://www.facebook.com/educonsultpro",
                    "https://www.linkedin.com/company/educonsultpro",
                    "https://twitter.com/educonsultpro"
                ]
            }
        </script>
    </head>
    <body class="font-sans bg-primary-900 text-gray-900">
        <div
            id="skip-link"
            class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md z-50"
        >
            <a href="#main-content">Skip to main content</a>
        </div>
        <slot />

        <!-- Analytics (placeholder for actual implementation) -->
        <script is:inline>
            // Google Analytics or other analytics code would go here
            console.log("Analytics tracking initialized");
        </script>
    </body>
</html>

<style is:global>
    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        line-height: 1.6;
    }

    /* Focus styles for accessibility */
    *:focus {
        outline: 2px solid #1e40af;
        outline-offset: 2px;
    }

    /* Screen reader only class */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    .focus\:not-sr-only:focus {
        position: static;
        width: auto;
        height: auto;
        padding: inherit;
        margin: inherit;
        overflow: visible;
        clip: auto;
        white-space: normal;
    }
</style>
