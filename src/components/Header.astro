<nav
    data-is-scrolled="true"
    aria-expanded="false"
    aria-label="Main Navigation"
    style="--t-heavy:1s;--t-light:.45s;--bezier:cubic-bezier(.6,.6,0,1);--nav-padding:.75rem;--nav-max-w-mobile:calc(var(--page-max-w) - (var(--page-px) * 2))"
    class="w-full max-w-[var(--nav-max-w-mobile)] mx-auto top-0 [--header-h:92px] lg:[--header-h:104px] h-[--header-h] sticky group transition-[max-width] [transition-duration:--t-light] ease-[--bezier] flex shrink-0 items-center text-white px-[var(--page-px)] lg:max-w-[1000px] z-50 mt-4 sm:mt-6 lg:mt-0"
>
    <div
        class="w-full flex items-center text-sm h-[60px] p-[var(--nav-padding)] rounded-[1rem] transition-[box-shadow,background-color] [transition-duration:--t-light] ease-[--bezier] group-data-[is-scrolled=true]:bg-primary-900 group-data-[is-scrolled=true]:backdrop-blur-md group-data-[is-scrolled=true]:[box-shadow:0_0_2px_rgba(0,0,0,0.1),0_2px_3px_rgba(0,0,0,0.08),0_4px_6px_rgba(0,0,0,0.08),0_20px_32px_-12px_rgba(0,0,0,0.12)]"
    >
        <div class="flex h-full w-full items-center justify-between">
            <!-- Logo -->
            <span data-state="closed" class="hover:cursor-pointer">
                <a
                    class="active:scale-95 active:opacity-80 transition-[transform,opacity] gap-1.5 flex items-center hover:!cursor-pointer"
                    aria-label="Logo"
                    href="/"
                >
                    <span class="text-2xl">ðŸŽ“</span>
                    <span
                        class="text-xl leading-none tracking-tight font-medium text-white"
                        >Study NZ</span
                    >
                </a>
            </span>

            <!-- Navigation Items (Desktop) -->
            <ul class="hidden lg:block absolute left-1/2 -translate-x-1/2">
                <div class="flex items-center justify-between gap-2">
                    <a
                        class="h-9 rounded-[10px] text-sm flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white font-normal hover:bg-primary-800 px-2.5 py-1"
                        href="/universities">Universities</a
                    >
                    <a
                        class="h-9 rounded-[10px] text-sm flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white font-normal hover:bg-primary-800 px-2.5 py-1"
                        href="/programs">Programs</a
                    >
                    <a
                        class="h-9 rounded-[10px] text-sm flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white font-normal hover:bg-primary-800 px-2.5 py-1"
                        href="/scholarships">Scholarships</a
                    >
                    <a
                        class="h-9 rounded-[10px] text-sm flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white font-normal hover:bg-primary-800 px-2.5 py-1"
                        href="/about">About</a
                    >
                    <a
                        class="h-9 rounded-[10px] text-sm flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white font-normal hover:bg-primary-800 px-2.5 py-1"
                        href="/contact">Contact</a
                    >
                </div>
            </ul>

            <!-- Right Side Actions -->
            <div class="flex items-center gap-3">
                <!-- Language Selector -->
                <button
                    class="text-sm text-white hover:text-white/80 hidden lg:flex items-center gap-1"
                >
                    English
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="ml-1"
                    >
                        <path d="m6 9 6 6 6-6"></path>
                    </svg>
                </button>

                <!-- Desktop Sign Up Button -->
                <div class="hidden lg:flex lg:items-center lg:gap-4">
                    <a
                        class="h-9 rounded-[10px] text-sm font-medium flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-primary-600 text-white hover:bg-primary-700 px-4 py-2"
                        href="/signup"
                    >
                        Sign Up
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <button
                    class="rounded-[10px] text-sm transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white font-normal hover:bg-primary-800 p-0 size-9 lg:hidden flex items-center justify-center"
                    aria-label="Toggle mobile menu"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-x hidden group-aria-expanded:block"
                    >
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2"
                        class="block group-aria-expanded:hidden size-6"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        aria-hidden="true"
        class="fixed inset-0 bg-primary-900/95 backdrop-blur-sm lg:hidden transition-all duration-300 opacity-0 invisible group-aria-expanded:opacity-100 group-aria-expanded:visible"
        style="top: var(--header-h)"
    >
        <div
            class="h-[calc(100vh-var(--header-h))] w-full max-w-[var(--nav-max-w-mobile)] mx-auto flex flex-col overflow-y-auto"
        >
            <!-- Mobile Menu Links -->
            <div class="flex w-full flex-col flex-1 p-4 space-y-2">
                <a
                    class="rounded-[10px] flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white hover:bg-primary-800 w-full text-xl font-medium p-4"
                    href="/universities">Universities</a
                >
                <a
                    class="rounded-[10px] flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white hover:bg-primary-800 w-full text-xl font-medium p-4"
                    href="/programs">Programs</a
                >
                <a
                    class="rounded-[10px] flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white hover:bg-primary-800 w-full text-xl font-medium p-4"
                    href="/scholarships">Scholarships</a
                >
                <a
                    class="rounded-[10px] flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white hover:bg-primary-800 w-full text-xl font-medium p-4"
                    href="/about">About</a
                >
                <a
                    class="rounded-[10px] flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white hover:bg-primary-800 w-full text-xl font-medium p-4"
                    href="/contact">Contact</a
                >
            </div>

            <!-- Mobile Menu Footer -->
            <div
                class="flex flex-col w-full gap-4 p-4 mt-auto border-t border-white/10"
            >
                <!-- Language Selector Mobile -->
                <button
                    class="rounded-[10px] flex items-center transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-transparent text-white hover:bg-primary-800 w-full text-xl font-medium p-4"
                >
                    English
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="ml-2"
                    >
                        <path d="m6 9 6 6 6-6"></path>
                    </svg>
                </button>

                <a
                    class="px-4 rounded-[10px] text-sm font-medium flex transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-white text-primary-900 hover:bg-white/90 w-full h-10 items-center justify-center text-center"
                    href="/signin"
                >
                    Log In
                </a>
                <a
                    class="px-4 rounded-[10px] text-sm font-medium flex transition-all duration-200 disabled:cursor-not-allowed disabled:opacity-50 bg-primary-600 text-white hover:bg-primary-700 w-full h-10 items-center justify-center text-center"
                    href="/signup"
                >
                    Sign Up
                </a>
            </div>
        </div>
    </div>
</nav>

<script>
    // Handle mobile menu toggle
    const nav = document.querySelector("nav");
    const menuButton = nav?.querySelector("button");

    menuButton?.addEventListener("click", () => {
        const isExpanded = nav?.getAttribute("aria-expanded") === "true";
        nav?.setAttribute("aria-expanded", (!isExpanded).toString());

        // Prevent body scroll when menu is open
        document.body.style.overflow = !isExpanded ? "hidden" : "";
    });

    // Handle scroll detection
    const handleScroll = () => {
        if (window.scrollY > 0) {
            nav?.setAttribute("data-is-scrolled", "true");
        } else {
            nav?.setAttribute("data-is-scrolled", "false");
        }
    };

    window.addEventListener("scroll", handleScroll);
    handleScroll(); // Initial check

    // Close mobile menu on wider screens
    window.addEventListener("resize", () => {
        if (
            window.innerWidth >= 1024 &&
            nav?.getAttribute("aria-expanded") === "true"
        ) {
            nav.setAttribute("aria-expanded", "false");
            document.body.style.overflow = "";
        }
    });
</script>
