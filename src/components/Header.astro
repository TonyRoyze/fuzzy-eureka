<script>
    // Handle mobile menu toggle
    const nav = document.querySelector("nav");
    const menuButton = nav?.querySelector("button");

    menuButton?.addEventListener("click", () => {
        const isExpanded = nav?.getAttribute("aria-expanded") === "true";
        nav?.setAttribute("aria-expanded", (!isExpanded).toString());

        // Prevent body scroll when menu is open
        document.body.style.overflow = !isExpanded ? "hidden" : "";
    });

    // Handle scroll detection
    const handleScroll = () => {
        if (window.scrollY > 0) {
            nav?.setAttribute("data-is-scrolled", "true");
        } else {
            nav?.setAttribute("data-is-scrolled", "false");
        }
    };

    window.addEventListener("scroll", handleScroll);
    handleScroll(); // Initial check

    // Close mobile menu on wider screens
    window.addEventListener("resize", () => {
        if (
            window.innerWidth >= 1024 &&
            nav?.getAttribute("aria-expanded") === "true"
        ) {
            nav.setAttribute("aria-expanded", "false");
            document.body.style.overflow = "";
        }
    });
</script>
