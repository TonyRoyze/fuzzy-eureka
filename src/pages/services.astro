---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Our Services - Rivil International"
    description="Comprehensive education consulting services including university admissions, visa assistance, test preparation, and career counseling. Expert guidance for your academic success."
>
    <Header />

    <main id="main-content" class="pt-8">
        <!-- Hero Section -->
        <section
            class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20"
        >
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h1 class="text-5xl font-bold mb-6">Our Expert Services</h1>
                <p class="text-xl text-blue-100 leading-relaxed">
                    Comprehensive educational consulting services designed to
                    guide you through every step of your academic journey.
                </p>
            </div>
        </section>

        <!-- Services Grid -->
        <section class="py-20 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                    <!-- University Admissions -->
                    <div
                        class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center mr-4"
                            >
                                <svg
                                    class="w-8 h-8 text-primary-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 14l9-5-9-5-9 5 9 5z"></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                                    ></path>
                                </svg>
                            </div>
                            <h2 class="text-2xl font-bold text-gray-900">
                                University Admissions
                            </h2>
                        </div>
                        <p class="text-gray-600 mb-6 leading-relaxed">
                            Navigate the complex university application process
                            with our expert guidance. From selecting the right
                            institutions to crafting compelling applications.
                        </p>
                        <ul class="space-y-3 mb-8">
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-primary-400 rounded-full mr-3"
                                >
                                </div>
                                University selection and matching
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-primary-400 rounded-full mr-3"
                                >
                                </div>
                                Application essay writing support
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-primary-400 rounded-full mr-3"
                                >
                                </div>
                                Interview preparation and coaching
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-primary-400 rounded-full mr-3"
                                >
                                </div>
                                Scholarship and financial aid guidance
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors"
                        >
                            Learn More
                            <svg
                                class="w-4 h-4 ml-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- Visa Assistance -->
                    <div
                        class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="w-16 h-16 bg-secondary-100 rounded-lg flex items-center justify-center mr-4"
                            >
                                <svg
                                    class="w-8 h-8 text-secondary-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                    ></path>
                                </svg>
                            </div>
                            <h2 class="text-2xl font-bold text-gray-900">
                                Visa Assistance
                            </h2>
                        </div>
                        <p class="text-gray-600 mb-6 leading-relaxed">
                            Comprehensive support for student visa applications,
                            ensuring all documentation is complete and
                            interviews are well-prepared.
                        </p>
                        <ul class="space-y-3 mb-8">
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-secondary-400 rounded-full mr-3"
                                >
                                </div>
                                Document preparation and review
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-secondary-400 rounded-full mr-3"
                                >
                                </div>
                                Visa interview preparation
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-secondary-400 rounded-full mr-3"
                                >
                                </div>
                                Application tracking and follow-up
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-secondary-400 rounded-full mr-3"
                                >
                                </div>
                                Legal compliance guidance
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-secondary-600 font-semibold hover:text-secondary-700 transition-colors"
                        >
                            Learn More
                            <svg
                                class="w-4 h-4 ml-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- Test Preparation -->
                    <div
                        class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="w-16 h-16 bg-accent-100 rounded-lg flex items-center justify-center mr-4"
                            >
                                <svg
                                    class="w-8 h-8 text-accent-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                    ></path>
                                </svg>
                            </div>
                            <h2 class="text-2xl font-bold text-gray-900">
                                Test Preparation
                            </h2>
                        </div>
                        <p class="text-gray-600 mb-6 leading-relaxed">
                            Comprehensive coaching for standardized tests
                            including SAT, GRE, GMAT, IELTS, and TOEFL with
                            proven strategies for success.
                        </p>
                        <ul class="space-y-3 mb-8">
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-accent-400 rounded-full mr-3"
                                >
                                </div>
                                Personalized study plans
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-accent-400 rounded-full mr-3"
                                >
                                </div>
                                Practice tests and mock exams
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-accent-400 rounded-full mr-3"
                                >
                                </div>
                                One-on-one tutoring sessions
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-accent-400 rounded-full mr-3"
                                >
                                </div>
                                Score improvement strategies
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-accent-600 font-semibold hover:text-accent-700 transition-colors"
                        >
                            Learn More
                            <svg
                                class="w-4 h-4 ml-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>

                    <!-- Career Counseling -->
                    <div
                        class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300"
                    >
                        <div class="flex items-center mb-6">
                            <div
                                class="w-16 h-16 bg-success-100 rounded-lg flex items-center justify-center mr-4"
                            >
                                <svg
                                    class="w-8 h-8 text-success-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"
                                    ></path>
                                </svg>
                            </div>
                            <h2 class="text-2xl font-bold text-gray-900">
                                Career Counseling
                            </h2>
                        </div>
                        <p class="text-gray-600 mb-6 leading-relaxed">
                            Professional guidance to align your academic choices
                            with long-term career goals and industry
                            requirements.
                        </p>
                        <ul class="space-y-3 mb-8">
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-success-400 rounded-full mr-3"
                                >
                                </div>
                                Career assessment and planning
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-success-400 rounded-full mr-3"
                                >
                                </div>
                                Industry insights and trends
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-success-400 rounded-full mr-3"
                                >
                                </div>
                                Professional networking support
                            </li>
                            <li class="flex items-center text-gray-700">
                                <div
                                    class="w-2 h-2 bg-success-400 rounded-full mr-3"
                                >
                                </div>
                                Resume and interview preparation
                            </li>
                        </ul>
                        <a
                            href="/contact"
                            class="inline-flex items-center text-success-600 font-semibold hover:text-success-700 transition-colors"
                        >
                            Learn More
                            <svg
                                class="w-4 h-4 ml-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Process Section -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-bold text-gray-900 mb-4">
                        Our Process
                    </h2>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                        A systematic approach to ensure your success at every
                        step of your educational journey.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <span class="text-2xl font-bold text-primary-600"
                                >1</span
                            >
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">
                            Initial Consultation
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Free consultation to understand your goals and
                            assess your current situation.
                        </p>
                    </div>

                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <span class="text-2xl font-bold text-primary-600"
                                >2</span
                            >
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">
                            Custom Strategy
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Develop a personalized plan tailored to your
                            specific needs and objectives.
                        </p>
                    </div>

                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <span class="text-2xl font-bold text-primary-600"
                                >3</span
                            >
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">
                            Implementation
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Execute the plan with ongoing support and guidance
                            from our experts.
                        </p>
                    </div>

                    <div class="text-center">
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
                        >
                            <span class="text-2xl font-bold text-primary-600"
                                >4</span
                            >
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">
                            Success
                        </h3>
                        <p class="text-gray-600 text-sm">
                            Achieve your goals with continued support throughout
                            your academic journey.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-primary-600 text-white">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h2 class="text-4xl font-bold mb-6">Ready to Get Started?</h2>
                <p class="text-xl text-blue-100 mb-8 leading-relaxed">
                    Take the first step toward your educational success with a
                    free consultation.
                </p>
                <a
                    href="/contact"
                    class="inline-flex items-center px-8 py-4 bg-accent-500 text-white font-semibold rounded-lg hover:bg-accent-600 transition-all duration-200 transform hover:scale-105"
                >
                    Schedule Free Consultation
                </a>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
