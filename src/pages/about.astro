---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="About Us - Rive Education"
    description="Learn about our mission, team, and commitment to helping students achieve their educational goals through expert consulting services."
>
    <Header />

    <main id="main-content" class="pt-8">
        <!-- Hero Section -->
        <section
            class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20"
        >
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <h1 class="text-5xl font-bold mb-6">About Rive Education</h1>
                <p class="text-xl text-blue-100 leading-relaxed">
                    Empowering students worldwide to achieve their academic
                    dreams through personalized guidance and expert support.
                </p>
            </div>
        </section>

        <!-- Mission Section -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                >
                    <div>
                        <h2 class="text-4xl font-bold text-gray-900 mb-6">
                            Our Mission
                        </h2>
                        <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                            At Rive Education, we believe that quality education
                            should be accessible to every student who dreams of
                            achieving academic excellence. Our mission is to
                            bridge the gap between students and their ideal
                            educational institutions through comprehensive
                            consulting services.
                        </p>
                        <p class="text-lg text-gray-600 leading-relaxed">
                            We are committed to providing personalized guidance
                            that considers each student's unique background,
                            goals, and aspirations, ensuring they make informed
                            decisions about their educational future.
                        </p>
                    </div>
                    <div class="relative">
                        <img
                            src="https://images.pexels.com/photos/5212703/pexels-photo-5212703.jpeg?auto=compress&cs=tinysrgb&w=800"
                            alt="Team meeting discussing student success strategies"
                            class="rounded-lg shadow-lg"
                            loading="lazy"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Values Section -->
        <section class="py-20 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-bold text-gray-900 mb-4">
                        Our Values
                    </h2>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                        The principles that guide everything we do and shape our
                        commitment to student success.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="text-center">
                        <div
                            class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <span class="text-2xl">üéØ</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">
                            Excellence
                        </h3>
                        <p class="text-gray-600">
                            We strive for excellence in every aspect of our
                            service, ensuring students receive the highest
                            quality guidance and support.
                        </p>
                    </div>

                    <div class="text-center">
                        <div
                            class="bg-secondary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <span class="text-2xl">ü§ù</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">
                            Integrity
                        </h3>
                        <p class="text-gray-600">
                            We maintain the highest ethical standards and
                            transparency in all our interactions with students
                            and partners.
                        </p>
                    </div>

                    <div class="text-center">
                        <div
                            class="bg-accent-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <span class="text-2xl">üí°</span>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">
                            Innovation
                        </h3>
                        <p class="text-gray-600">
                            We continuously evolve our methods and embrace new
                            technologies to better serve our students' needs.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="py-20 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16">
                    <h2 class="text-4xl font-bold text-gray-900 mb-4">
                        Meet Our Team
                    </h2>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                        Our experienced consultants bring decades of expertise
                        in education, admissions, and student success.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                >
                    <div class="text-center">
                        <img
                            src="https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=400"
                            alt="Dr. Sarah Williams - Founder & CEO"
                            class="w-32 h-32 rounded-full mx-auto mb-6 object-cover"
                            loading="lazy"
                        />
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                            Dr. Sarah Williams
                        </h3>
                        <p class="text-primary-600 font-medium mb-3">
                            Founder & CEO
                        </p>
                        <p class="text-gray-600 text-sm">
                            Former admissions director at Harvard with 15+ years
                            of experience in international education consulting.
                        </p>
                    </div>

                    <div class="text-center">
                        <img
                            src="https://images.pexels.com/photos/3184296/pexels-photo-3184296.jpeg?auto=compress&cs=tinysrgb&w=400"
                            alt="Michael Chen - Senior Consultant"
                            class="w-32 h-32 rounded-full mx-auto mb-6 object-cover"
                            loading="lazy"
                        />
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                            Michael Chen
                        </h3>
                        <p class="text-primary-600 font-medium mb-3">
                            Senior Consultant
                        </p>
                        <p class="text-gray-600 text-sm">
                            MIT graduate specializing in STEM program admissions
                            and scholarship guidance with a 98% success rate.
                        </p>
                    </div>

                    <div class="text-center">
                        <img
                            src="https://images.pexels.com/photos/3184300/pexels-photo-3184300.jpeg?auto=compress&cs=tinysrgb&w=400"
                            alt="Emily Rodriguez - Visa Specialist"
                            class="w-32 h-32 rounded-full mx-auto mb-6 object-cover"
                            loading="lazy"
                        />
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                            Emily Rodriguez
                        </h3>
                        <p class="text-primary-600 font-medium mb-3">
                            Visa Specialist
                        </p>
                        <p class="text-gray-600 text-sm">
                            Immigration law expert with extensive experience in
                            student visa processing for multiple countries.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section class="py-20 bg-primary-600 text-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
                    <div>
                        <div class="text-4xl font-bold mb-2">5,000+</div>
                        <div class="text-blue-200">Students Helped</div>
                    </div>
                    <div>
                        <div class="text-4xl font-bold mb-2">200+</div>
                        <div class="text-blue-200">University Partners</div>
                    </div>
                    <div>
                        <div class="text-4xl font-bold mb-2">95%</div>
                        <div class="text-blue-200">Success Rate</div>
                    </div>
                    <div>
                        <div class="text-4xl font-bold mb-2">15+</div>
                        <div class="text-blue-200">Years Experience</div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
